@model BibliotecaBolonMiguel.Models.Domain.Autor

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Editar Autor";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow rounded-4">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Autor</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PkAutor" />

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Nombre" class="form-control border rounded-3" placeholder="Nombre del autor" required />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Biografia" class="form-label fw-semibold">Biografía</label>
                            <textarea asp-for="Biografia" class="form-control border rounded-3" rows="3" placeholder="Escribe una biografía"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaNacimiento" class="form-label fw-semibold">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimiento" type="date" class="form-control border rounded-3" required />
                        </div>

                        <div class="text-center mb-3">
                            <label class="form-label fw-semibold">Foto Actual</label><br>
                            <img src="@Model.FotoUrl" id="previewImage" alt="Foto actual" width="100" class="rounded shadow" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-semibold">Actualizar Foto</label>
                            <input type="file" name="foto" class="form-control border rounded-3" accept="image/*" onchange="previewFile(event)" />
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">
                                <i class="bi bi-save me-2"></i> Guardar
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="text-decoration-none text-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Volver al listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewFile(event) {
            const preview = document.getElementById('previewImage');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}

<style>
    .card {
        background: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .bg-dark {
        background-color: #343a40 !important;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .text-secondary:hover {
        color: #6c757d !important;
    }
</style>
