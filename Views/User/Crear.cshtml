@model BibliotecaBolonMiguel.Models.Domain.Usuario
@{
    Layout = "_LayoutDashboard";
}
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow rounded-4">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-book"></i> Nuevo Usuario</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Crear" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Nombre" class="form-control border rounded-3" placeholder="Nombre completo" required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label fw-semibold">Usuario</label>
                            <input asp-for="UserName" class="form-control border rounded-3" placeholder="Nombre de usuario" required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control border rounded-3" placeholder="********" required />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label fw-semibold">Rol</label>
                            <select asp-for="FkRol" asp-items="ViewBag.Roles" class="form-select border rounded-3">
                                <option value="">Seleccione un rol</option>
                            </select>
                        </div>
                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-success w-100 py-2 rounded-3">
                                <i class="bi bi-save me-2"></i> Guardar Usuario
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-controller="User" asp-action="Index" class="text-decoration-none text-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Volver al listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        background: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .bg-dark {
        background-color: #343a40 !important;
    }
    .form-control, .form-select {
        padding: 0.75rem;
        font-size: 1rem;
    }
    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease;
    }
    .btn-success:hover {
        background: #218838;
    }
    .text-secondary:hover {
        color: #6c757d !important;
    }
</style>
