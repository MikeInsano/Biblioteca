@model BibliotecaBolonMiguel.Models.Domain.Editorial
@{
    Layout = "_LayoutDashboard";
}
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow rounded-4">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Editorial</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="PkEditorial" />
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre de la Editorial</label>
                            <input asp-for="Nombre" class="form-control border rounded-3" placeholder="Nombre de la Editorial" required />
                        </div>
                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">
                                <i class="bi bi-save me-2"></i> Actualizar Editorial
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="text-decoration-none text-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Volver al listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        background: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .bg-dark {
        background-color: #343a40 !important;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background: #218838;
        }

    .text-secondary:hover {
        color: #6c757d !important;
    }
</style>
